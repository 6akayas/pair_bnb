<div class="container">
	<div class="row">
		<h3>My Reservations</h3>
	</div>
	<table class="table table-hover">
		<thead>
			<tr>
				<th>
					Start date
				</th>
				<th>
					End Date
				</th>
				<th>
					Total Price
				</th>
				<th>
					Listing:
				</th>
			</tr>
		</thead>
		<tbody>
			<% current_user.reservations.all.each do |r| %>
			<tr>
				<td><% r.start_date %></td>
				<td><% r.end_date %></td>
				<td><% r.total_price %></td>
				<td><a href="/listings/<% r.listing_id %>">Click for listing! </a></td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>